{% extends 'base.html.twig' %} {% block title %}Lista de usuários {% endblock %} {% block body %}
<div class="container">
    {% block navbar %} {% include ('navbar.html.twig') %} {% endblock navbar %}
    <div class="row">
        <div class="col-md-12">
            <h5 class="ml-3 text-info">Lista de Usuários</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive-sm">
                <table class="table table-hover table-sm">
                    <thead class="bg-dark text-info">
                        <tr>
                            <!--<th>Id</th>-->
                            <th>Nome</th>
                            <!--<th>Apelido</th>-->
                            <th>Email</th>
                            <th>Username</th>
                            <!--<th>Password</th>
                            <th>Activo</th>
                            <th>Registo</th>
                            <th>Registo_update</th>-->
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <!--<td>{{ user.id }}</td>-->
                            <td>{{ user.nome }} {{ user.apelido }}</td>
                            <!--<td>{{ user.apelido }}</td>-->
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</td>
                            <!--<td>{{ user.password }}</td>
                            <td>{{ user.activo ? 'Yes' : 'No' }}</td>
                            <td>{{ user.registo ? user.registo|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.registoUpdate ? user.registoUpdate|date('Y-m-d H:i:s') : '' }}</td>-->
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye fa-1x text-info" title="Detalhes do usuário"></i></a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit fa-1x text-danger" title="Editar dados"></i></a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="10">Não existem usuários</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <p>
                <hr>
            </p>
            <a href="{{ path('user_new') }}"><button class="btn btn-outline-info" title="Criar novo usuário">CRIAR USUÁRIO</button></a>
        </div>
    </div>
    {% block footer %} {% include ('footer.html.twig') %} {% endblock footer %}
</div>
{% endblock %}
