{% extends 'base.html.twig' %} {% block title %}Hello HomePageController!{% endblock %} {% block body %}
<div class="container">
    {% block navbar %} {% include ('navbar.html.twig') %} {% endblock navbar %}
    <div class="row">
        <div class="col-md-8 text-center mx-auto">
            <h5>Bem-vinda(o) {#{{ usuario.login }}#}</h5>
            <p class="lead mb-4">
                <hr>
            </p>
        </div>
    </div>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card text-center">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" data-target="#tabMarcacoes">Marcações</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="" data-toggle="tab" data-target="#tabClientes">Clientes</a>
                                </li>
                                <!--<li class="nav-item">
                                    <a class="nav-link disabled" data-toggle="tab" data-target="#tabthree">Tab 3</a>
                                </li>-->
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content mt-2">
                                <div class="tab-pane fade show active" id="tabMarcacoes" role="tabpanel">
                                    <p class="">AQui vai aparecer uma tabela com as ultima 5 marcações</p>
                                    <!---->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-responsive-sm">
                                                <table class="table table-hover table-sm">
                                                    <thead class="bg-dark text-info">
                                                        <tr>
                                                            <!--<th>Id</th>-->
                                                            <th>Nome</th>
                                                            <th>Tiposervico1</th>
                                                            <!--<th>Tiposervico2</th>
                                                            <th>Tiposervico3</th>
                                                            <th>Tiposervico4</th>-->
                                                            <th>Dia</th>
                                                            <th>Hora</th>
                                                            <!--<th>Notas</th>-->
                                                            <th>Status</th>
                                                            <!--<th>Valor</th>
                                                            <th>Registo</th>
                                                            <th>Registo_update</th>-->
                                                            <th>Opções</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for marcaco in marcacoes[5:] %}
                                                        <tr>
                                                            <!--<td>{{ marcaco.id }}</td>-->
                                                            <td>{{ marcaco.nomeCliente }}</td>
                                                            <td>{{ marcaco.tiposervico1 }}</td>
                                                            <!--<td>{{ marcaco.tiposervico2 }}</td>
                                                            <td>{{ marcaco.tiposervico3 }}</td>
                                                            <td>{{ marcaco.tiposervico4 }}</td>-->
                                                            <td>{{ marcaco.diaM ? marcaco.diaM|date('Y-m-d') : '' }}</td>
                                                            <td>{{ marcaco.horaM ? marcaco.horaM|date('H:i:s') : '' }}</td>
                                                            <!--<td>{{ marcaco.notas }}</td>-->
                                                            <td>{{ marcaco.status }}</td>
                                                            <!--<td>{{ marcaco.valor }}</td>
                                                            <td>{{ marcaco.registo ? marcaco.registo|date('Y-m-d H:i:s') : '' }}</td>
                                                            <td>{{ marcaco.registoUpdate ? marcaco.registoUpdate|date('Y-m-d H:i:s') : '' }}</td>-->
                                                            <td>
                                                                <a href="{{ path('marcacoes_show', {'id': marcaco.id}) }}"><i class="fas fa-eye fa-1x text-info" title="Detalhes da marcação"></i></a>
                                                                <a href="{{ path('marcacoes_edit', {'id': marcaco.id}) }}"><i class="fas fa-edit fa-1x text-danger" title="Editar dados"></i></a>
                                                            </td>
                                                        </tr>
                                                        {% else %}
                                                        <tr>
                                                            <td colspan="14">Não existem Marcações</td>
                                                        </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!---->

                                </div>
                                <div class="tab-pane fade" id="tabClientes" role="tabpanel">
                                    <p class="">Aqui vai aparecer as ultimas 5 clientes registadas</p>

                                </div>
                            </div>
                            <!--<div class="tab-pane fade" id="tabthree" role="tabpanel">
                                    <p class="">In my soul and absorb its power, like the form of a beloved mistress, then I often think with longing.</p>
                                </div>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% block footer %} {% include ('footer.html.twig') %} {% endblock footer %}
</div>
{% endblock %}