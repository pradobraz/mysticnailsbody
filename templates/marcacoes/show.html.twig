{% extends 'base.html.twig' %}{% block title %}Marcacoes{% endblock %}{% block body %}
<div class="container">
    {% block navbar %} {% include ('navbar.html.twig') %} {% endblock navbar %}
    <div class="py-3">
        <div class="row">
            <div class="col-md-10">
                <h5 class="ml-5 text-info">Marcação</h5>
            </div>
        </div>
    </div>
    <div class="py-1 ml-5 col-md-10 border border-warning">
        <div class="row">
            <div class="col-md-10">
                <br>
                <div class="table-responsive-md">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ marcaco.id }}</td>
                            </tr>
                            <tr>
                                <th>Cliente</th>
                                <td>{{ marcaco.idCliente }}</td>
                            </tr>
                            <tr>
                                <th>Serviço->1</th>
                                <td>{{ marcaco.servico1 }}</td>
                            </tr>
                            <tr>
                                <th>Serviço->2</th>
                                <td>{{ marcaco.servico2 }}</td>
                            </tr>
                            <tr>
                                <th>Serviço->3</th>
                                <td>{{ marcaco.servico3 }}</td>
                            </tr>
                            <tr>
                                <th>Servico->4</th>
                                <td>{{ marcaco.servico4 }}</td>
                            </tr>
                            <tr>
                                <th>Dia</th>
                                <td>{{ marcaco.marcacaoDia ? marcaco.marcacaoDia|date('d-m-Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Hora</th>
                                <td>{{ marcaco.marcacaoHora ? marcaco.marcacaoHora|date('H:i:s') : '' }}</td>
                            </tr>
                            <!--<tr>
                                <th>Notas</th>
                                {#<td>{{ marcaco.notas }}</td>#}
                            </tr>-->
                            <tr>
                                <th>Valor</th>
                                <td>{{ marcaco.valor }}€</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ marcaco.estado }}</td>
                            </tr>
                            <tr>
                                <th>Registo</th>
                                <td>{{ marcaco.registo ? marcaco.registo|date('d-m-Y H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Registo_update</th>
                                <td>{{ marcaco.registoUpdate ? marcaco.registoUpdate|date('d-m-Y H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-flex">
                <div class="ml-2">
                    <a href="{{ path('marcacoes_edit', {'id': marcaco.id}) }}"><button class="btn btn-outline-info"><i class="fas fa-pencil-alt fa-1x"></i></button></a>
                </div>
                <div class="m-2"></div>
                <div class="mr-2">
                    {{ include('marcacoes/_delete_form.html.twig', {'button_label': 'delete'}) }}
                </div>
            </div>
            <div class="m-3"> </div>
        </div>
    </div>
    <div class="py-3">
        <div class="row">
            <div class="ml-5 col-md-10 text-center">
                <a href="{{ path('marcacoes_index') }}"> <button class="btn btn-outline-info" title="Lista de marcações">Lista marcações</button></a>
            </div>
        </div>
    </div>
    {% block footer %} {% include ('footer.html.twig') %} {% endblock footer %}
</div>

{% endblock %}